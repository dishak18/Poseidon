<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.litebulb.WithdrawalFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_album_radius">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_background"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:padding="5dp"
                android:layout_marginBottom="8dp"
                android:text="Your Balance"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your total balance is: " />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/total"/>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This includes cash deposited through Paypal and Earnings. You are only able to withdraw earnings."
                android:layout_marginBottom="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_background"
                android:textStyle="bold"
                android:textColor="#fff"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Your Balance"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Current Balance (Cash Deposited)"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/balance"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Current Balance of Earnings (Can Withdraw)"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/earnings"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_background"
                android:textStyle="bold"
                android:textColor="#fff"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Make a Payment Request"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Withdraws Are Issued On The 15th Of The Month Following!"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="When The 15th Falls On A Weekend Or Public Holiday, It Is Issued On The Next Business Day."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/amount"
                    android:background="@drawable/shapes_grey"
                    android:hint="Amount"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/radioGroup"
                android:layout_height="wrap_content">


                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PayPal"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/rb_paypal"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MoneyBookers"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/rb_moneybookers"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="International Transfer"
                    android:id="@+id/rb_international_transfer"/>
            </RadioGroup>


        </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</FrameLayout>
