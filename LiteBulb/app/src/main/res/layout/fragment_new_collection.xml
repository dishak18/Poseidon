<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    tools:context="com.example.admin.litebulb.NewCollectionFragment">
<ScrollView
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/card_margin"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Collection"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:padding="10dp"
                android:background="@color/grey"
                android:layout_marginBottom="15dp"
                android:hint="Title"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/description"
                android:padding="10dp"
                android:background="@color/grey"
                android:layout_marginBottom="15dp"
                android:hint="Write your description"/>

            <!--<Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Cover Image"
                android:id="@+id/cover_image"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:textColor="@drawable/gradient_background"/>-->

            <CheckBox
                android:layout_width="match_parent"
                android:id="@+id/make_public"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Make Public"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Request"
                android:id="@+id/submit"
                android:layout_marginBottom="15dp"
                android:background="@drawable/gradient_background"
                android:textColor="#fff"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>

</FrameLayout>
